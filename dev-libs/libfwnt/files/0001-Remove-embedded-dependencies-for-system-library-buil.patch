From c848bd94836122be148654128ce0fae7d4e918d1 Mon Sep 17 00:00:00 2001
From: Dirk Tilger <dirk@systemication.com>
Date: Mon, 2 Feb 2026 10:10:36 +0100
Subject: [PATCH] Remove embedded dependencies for system library build

---
 Makefile.am  | 22 ----------------------
 configure.ac |  4 ----
 2 files changed, 26 deletions(-)

diff --git a/Makefile.am b/Makefile.am
index 4561a17..84a983d 100644
--- a/Makefile.am
+++ b/Makefile.am
@@ -1,12 +1,7 @@
 ACLOCAL_AMFLAGS = -I m4
-
 SUBDIRS = \
 	include \
 	common \
-	libcerror \
-	libcthreads \
-	libcdata \
-	libcnotify \
 	libfwnt \
 	pyfwnt \
 	po \
@@ -14,7 +9,6 @@ SUBDIRS = \
 	tests \
 	ossfuzz \
 	msvscpp
-
 DPKG_FILES = \
 	dpkg/changelog \
 	dpkg/changelog.in \
@@ -26,31 +20,25 @@ DPKG_FILES = \
 	dpkg/libfwnt-dev.install \
 	dpkg/libfwnt-python3.install \
 	dpkg/source/format
-
 GETTEXT_FILES = \
 	config.rpath \
 	po/Makevars.in
-
 PKGCONFIG_FILES = \
 	libfwnt.pc.in
-
 SETUP_PY_FILES = \
 	pyproject.toml \
 	setup.cfg \
 	setup.cfg.in \
 	setup.py
-
 SPEC_FILES = \
 	libfwnt.spec \
 	libfwnt.spec.in
-
 EXTRA_DIST = \
 	$(DPKG_FILES) \
 	$(GETTEXT_FILES) \
 	$(PKGCONFIG_FILES) \
 	$(SETUP_PY_FILES) \
 	$(SPEC_FILES)
-
 DISTCLEANFILES = \
 	config.status \
 	config.cache \
@@ -60,23 +48,13 @@ DISTCLEANFILES = \
 	Makefile \
 	Makefile.in \
 	po/Makevars
-
 pkgconfigdir = $(libdir)/pkgconfig
-
 pkgconfig_DATA = \
 	libfwnt.pc
-
 libtool: @LIBTOOL_DEPS@
 	cd $(srcdir) && $(SHELL) ./config.status --recheck
-
 lib: library
-
 library:
 	(cd $(srcdir)/common && $(MAKE) $(AM_MAKEFLAGS))
-	(cd $(srcdir)/libcerror && $(MAKE) $(AM_MAKEFLAGS))
-	(cd $(srcdir)/libcthreads && $(MAKE) $(AM_MAKEFLAGS))
-	(cd $(srcdir)/libcdata && $(MAKE) $(AM_MAKEFLAGS))
-	(cd $(srcdir)/libcnotify && $(MAKE) $(AM_MAKEFLAGS))
 	(cd $(srcdir)/libfwnt && $(MAKE) $(AM_MAKEFLAGS))
 	(cd $(srcdir)/po && $(MAKE) $(AM_MAKEFLAGS))
-
diff --git a/configure.ac b/configure.ac
index 621cbba..2e4e900 100644
--- a/configure.ac
+++ b/configure.ac
@@ -124,10 +124,6 @@ dnl Generate Makefiles
 AC_CONFIG_FILES([Makefile])
 AC_CONFIG_FILES([include/Makefile])
 AC_CONFIG_FILES([common/Makefile])
-AC_CONFIG_FILES([libcerror/Makefile])
-AC_CONFIG_FILES([libcthreads/Makefile])
-AC_CONFIG_FILES([libcdata/Makefile])
-AC_CONFIG_FILES([libcnotify/Makefile])
 AC_CONFIG_FILES([libfwnt/Makefile])
 AC_CONFIG_FILES([pyfwnt/Makefile])
 AC_CONFIG_FILES([po/Makefile.in])
-- 
